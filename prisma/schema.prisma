generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Mesa {
  id     String @id @default(uuid())
  mesa   Int
  data   DateTime
  state  String
  pratos Prato[] //array da tabela prato

  @@map("mesas") // renomeando nome da tabela do banco de dados
}

model Prato {
  id         String @id @default(uuid())
  name       String
  desc       String
  obs        String
  type       String // cozinha || bar
  valor      Float

  mesa Mesa? @relation(fields:[mesa_id], references: [id])
  mesa_id    String? //Chave estrangeira com id da mesa
}