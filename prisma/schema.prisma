generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Mesa {
  id     Int @id @unique
  mesa   Int
  pratos Prato[] //array da tabela prato

  @@map("mesas") // renomeando nome da tabela do banco de dados
}

model Prato {
  id         Int @id @unique
  name       String
  desc       String
  obs        String
  state      String
  data       DateTime
  valor      Float

  mesa Mesa? @relation(fields:[mesa_id], references: [id])
  mesa_id    Int? //Chave estrangeira com id da mesa
  @@map("pratos")
}